<main class="main-content cont" data-style="display: flex;">
  <section class="blog">
    <h3 class="default-title blue">Blog</h3>
    <% if @blogs_masseges.any? %>
      <% @blogs_masseges.each do |msg| %>
        <figure class="blog-figure">
          <% unless msg.image.blank? %>
            <%= image_tag msg.image.url, class: "blog-figure-img", alt: (msg.image.url || "Blog") %>
          <% end %>
          <figcaption class="blog-figure-content">
            <h4 class="blog-figure-content-title"><%= msg.title %></h4>
            <p class="blog-figure-content-text">
              <%= truncate( msg.body, length: 150, escape: false){ link_to "[ READ MORE ]", blogs_blog_path(msg),class: "recipes-figure-link" }%>
            </p>
          </figcaption>
        </figure>
      <% end %>
    <% end %>
    <footer class="main-content-footer">
      <%= link_to "[View more posts]", blogs_blogs_path %>
    </footer>
  </section>

  <section class="recipes">
    <h3 class="default-title">Recipes</h3>
    <figure class="recipes-figure">
      <%= image_tag "recipe2.png", class: "recipes-figure-img",  alt: "recipe" %>
      <figcaption>
