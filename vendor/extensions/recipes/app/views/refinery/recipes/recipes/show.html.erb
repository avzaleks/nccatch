<%= render :layout => '/refinery/second_pages', :locals => { :title => "Resipes", :path => refinery.recipes_recipes_path.to_s, :obj => @recipe  } do%>
    <% content_for :body_content_title do %>
      <h1><%= @recipe.title.upcase %></h1>
    <% end %>

    <% content_for :body do %>
      <section>
        <p>
            <%= image_fu @recipe.image, nil, class: "recipe_image" %>
          <div class="recipe_body">
            <%= @recipe.body.html_safe %>
          </div>
        </p>
      </section>
    <% end %>

    <%= render '/refinery/content_page' %>
<% end %>