<%= render :layout => '/refinery/second_pages', :locals => { :title => "Resipes", :path => refinery.articles_articles_url.to_s  } do%>
    <h3 class="article-header">Recipes</h3>
	  <ul id="recipes">
	    <% @recipes.each do |recipe| %>
	      <li>
	        <h4><%= link_to recipe.title.upcase, refinery.recipes_recipe_path(recipe) %></h4>
		    <p>
		    	<%= truncate( recipe.body.html_safe, length: 150, escape: false, :omission => ""){ link_to "...read more", refinery.recipes_recipe_path(recipe) } %>
		    </p>
	      </li>
	    <% end %>
	  </ul>
	  <div class="pagination">
	  <%= will_paginate @recipes %>
	  </div>
<% end %>