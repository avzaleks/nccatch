<div class='main-content cont'>
	<div class="container">
		<% content_for :body do %>
		  <ul id="recipes">
		    <% @recipes.each do |recipe| %>
		      <li>
		        <h3><%= link_to recipe.title.upcase, refinery.recipes_recipe_path(recipe) %></h3>
			    <p>
			    	<%= truncate( recipe.body.html_safe, length: 150, escape: false, :omission => ""){ link_to "...read more", refinery.recipes_recipe_path(recipe) } %>
			    </p>
		      </li>
		    <% end %>
		  </ul>
		  <div class="pagination">
		  <%= will_paginate @recipes %>
		  </div>
		<% end %>

		<%= render '/refinery/content_page' %>
	</div>
</div>