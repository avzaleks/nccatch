<ul>
  <% if ::Refinery::Recipes::Admin::RecipesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.recipes_admin_recipes_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_recipes_admin_recipe_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Recipes::Admin::RecipesController.sortable? && ::Refinery::Recipes::Recipe.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.recipes_admin_recipes_path,
                     t('.reorder', what:  "Recipes"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.recipes_admin_recipes_path,
                      t('.reorder_done', what: "Recipes"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
