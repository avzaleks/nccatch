<main class="main-content different__order cont" data-style="display: flex;">
	<section class="main-block">
		<h3 class="default-title blue">Categories</h3>
		<% if @categories.any? %>
			<ul>
				<% @categories.each do |category| %>
						<li>
							<div class="single-recipe__title">
								<%= link_to category.title, refinery.recipes_recipes_path(category: category.id) %> (<%= category.recipes.count %>)
							</div>
						</li>
				<% end %>
			</ul>
		<% end %>
		<div class="pagination-box">
			<span class="pagination__label">
				<%= will_paginate @categories %>
			</span>
		</div>
	</section>
	<section class="events events__recipes">
		<%= render :partial => "events" %>
	</section>
</main>

<% content_for :js do %>
  <%= javascript_include_tag "pagination_style" %>
<% end %>