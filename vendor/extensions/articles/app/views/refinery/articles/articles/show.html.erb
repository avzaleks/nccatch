<%= render :layout => '/refinery/second_pages', :locals => { :title => "News & Articles", :path => refinery.articles_articles_path.to_s, :obj => @article  } do%>
        <% unless @article.image.blank? %>
          <%= image_tag @article.image.url, class: "article-box-image" %>
        <% end %>
        <h3 class="article-header">
          <%= @article.title unless @article.title.blank? %>
        </h3>
        <p class="article-paragraph">
          <%= @article.body.html_safe unless @article.body.blank? %>
        </p>
<% end %>