<%= form_for [refinery, :sponsors_admin, @sponsor] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @sponsor,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label "Link" -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @sponsor.image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :add_to_home_page -%>
    <%= f.check_box :add_to_home_page, :checked => @sponsor[:add_to_home_page] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.sponsors.admin.sponsors.sponsor'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @sponsor.title) -%>
<% end -%>
