<ul>
  <% if ::Refinery::SponsorInFooters::Admin::SponsorInFootersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.sponsor_in_footers_admin_sponsor_in_footers_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_sponsor_in_footers_admin_sponsor_in_footer_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::SponsorInFooters::Admin::SponsorInFootersController.sortable? && ::Refinery::SponsorInFooters::SponsorInFooter.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.sponsor_in_footers_admin_sponsor_in_footers_path,
                     t('.reorder', what:  "Sponsor In Footers"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.sponsor_in_footers_admin_sponsor_in_footers_path,
                      t('.reorder_done', what: "Sponsor In Footers"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
