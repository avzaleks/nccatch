<%= form_for [refinery, :sponsor_in_footers_admin, @sponsor_in_footer] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @sponsor_in_footer,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :image_id,
               :resource => @sponsor_in_footer.image -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.sponsor_in_footers.admin.sponsor_in_footers.sponsor_in_footer'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @sponsor_in_footer.name) -%>
<% end -%>
