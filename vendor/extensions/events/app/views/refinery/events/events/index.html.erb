<main class="main-content cont" data-style="display: flex;">
  <section class="whowe">
  <h3 class="default-title blue"><%= @page.title %></h3>
    <div id="calendar"></div>

    <% content_for :javascripts do %>
        <script src='http://fullcalendar.io/js/fullcalendar-2.1.1/lib/moment.min.js'></script>
        <script src='http://fullcalendar.io/js/fullcalendar-2.1.1/fullcalendar.min.js'></script>
        <script type="text/javascript" src="/assets/jquery.qtip.min.js"></script>
        <script> $(function(){ InitCalendar (<%= @events_js.to_json.html_safe %>); }); </script>
    <% end %>

    <% content_for :stylesheets do %>
        <%= stylesheet_link_tag 'fullcalendar.min.css' %>
        <link href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.10/themes/redmond/jquery-ui.css' rel='stylesheet' type='text/css'>
        <link href='http://qtip2.com/v/nightly/jquery.qtip.css' rel='stylesheet' type='text/css'>
    <% end %>
  </section>
  <%= render partial: "refinery/pages/events" %>
</main>