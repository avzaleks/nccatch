<%= form_for [refinery, :explore_regional_nc_fishings_admin, @explore_regional_nc_fishing] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @explore_regional_nc_fishing,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :add_to_home_page -%>
    <%= f.check_box :add_to_home_page, :checked => @explore_regional_nc_fishing[:add_to_home_page] -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @explore_regional_nc_fishing.image,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.explore_regional_nc_fishings.admin.explore_regional_nc_fishings.explore_regional_nc_fishing'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @explore_regional_nc_fishing.link) -%>
<% end -%>
