<main class="main-content cont" data-style="display: flex;">
  <section class="whowe">
    <h1 class="blog_recipe_title"><%= @blog.title %></h1>
    <%= image_tag @blog.image.url, class: "blog_recipe_image" %>
    <%= raw @blog.body %>
    <% content_for :side_body do %>
      <aside>
        <h2><%= t('.other') %></h2>
        <ul id="blogs">
          <% @blogs.each do |blog| %>
            <li>
              <%= link_to blog.title, refinery.blogs_blog_path(blog) %>
            </li>
          <% end %>
        </ul>
      </aside>
    <% end %>
    <h1>Other NC Catch`s posts</h1>
      <ul id="blogs">
        <% @blogs.each do |blog| %>
          <li>
            <%= link_to blog.title, refinery.blogs_blog_path(blog) %>
          </li>
        <% end %>
      </ul>
  </section>
  <%= render partial: "refinery/pages/events" %>
</main>