<%= form_for [refinery, :videos_admin, @video] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @video,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :add_to_home_page -%>
    <%= f.check_box :add_to_home_page, :checked => @video[:add_to_home_page] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.videos.admin.videos.video'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @video.title) -%>
<% end -%>
