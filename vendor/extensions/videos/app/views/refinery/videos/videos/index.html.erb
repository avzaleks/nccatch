<div class='main-content cont'>
	<div class="container videos">


		<%#= render '/refinery/content_page' %>
	</div>
</div>


<%= render :layout => '/refinery/second_pages', :locals => { :title => "Video Gallery", :path => refinery.videos_videos_url.to_s  } do%>
        <h1>Video Gallery</h1>
		  <ul id="videos">
		    <% @videos.each do |video| %>
		      <li>
		        <% unless video.link.blank? %>
	          		<iframe src="https://www.youtube.com/embed/<%= video_link(video) %>" frameborder="0" allowfullscreen></iframe><br>
	          		<%= link_to video.title, "https://www.youtube.com/embed/#{video_link(video)}" %>
        		<% end %>
		      </li>
		    <% end %>
		  </ul>
<% end %>