<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(mail) -%>">
  <span class='title'>
    <%= mail.full_name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.mails_mail_path(mail), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_mails_admin_mail_path(mail), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.mails_admin_mail_path(mail), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: mail.full_name)}}  ) %>
  </span>
</li>
