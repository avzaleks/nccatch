<%= render 'refinery/admin/search_header', :url => refinery.mails_admin_mails_path %>
<div class='pagination_container'>
  <% if @mails.any? %>
    <%= render 'mails' %>
  <% else %>
    <p>
      <% if searching? %>
        <%= t('no_results', :scope => 'refinery.admin.search') %>
      <% else %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>
